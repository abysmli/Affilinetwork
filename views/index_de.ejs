<div class="page-intro">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <ol class="breadcrumb">
                    <li><i class="fa fa-th-large pr-10"></i>Kategorie: </li>
                    <li class="active"><a href="/DE/?category=服装鞋子">Kleidung&Schuhe</a></li>
                    <li class="active"><a href="/DE/?category=食品饮食">Essen</a></li>
                    <li class="active"><a href="/DE/?category=厨房用具">Küche</a></li>
                    <li class="active"><a href="/DE/?category=电子产品">Elektro&Computer</a></li>
                    <li class="active"><a href="/DE/?category=母婴">Mutter&Baby</a></li>
                    <li class="active"><a href="/DE/?category=化妆品">Kosmetik</a></li>
                    <li class="active"><a href="/DE/?category=健康保健">Gesundheit</a></li>
                    <li class="active"><a href="/DE/?category=旅游">Reisen&Urlaub</a></li>
                    <li class="active"><a href="/DE/?category=其他">Andere</a></li>
                </ol>
            </div>
            <div class="col-md-2">
                <form role="search" class="search-box" style="margin: 0 !important;">
                    <div class="has-feedback">
                        <input type="text" class="form-control" placeholder="Suchen" name="search" style="-webkit-appearance: textfield; border-radius: 25px">
                        <i class="fa fa-search form-control-feedback"></i>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- main-container start -->
<!-- ================ -->
<section class="main-container">
    <div class="container-fluid">
        <div class="row">
            <div class="main col-md-10">
                <% if (mainPage) { %>
                <h2 class="page-title">Angebote</h2>
                <div class="separator-2"></div>
                <div class="owl-carousel carousel-autoplay owl-theme col-xs-6">
                    <% hotproducts.forEach(function(product, index) { %>
                    <div class="image-box">
                        <div class="overlay-container">
                            <img src="<%= product.Images %>" />
                            <a href="/DE/product?product_id=<%= product.ProductId %>" class="overlay small">
                                <i class="fa fa-search-plus"></i>
                                <span><%= product.Description %></span>
                            </a>
                        </div>
                        <div class="listing-item-body clearfix">
                            <h3 class="title" style="font-weight: 300"><a href="/DE/product?product_id=<%= product.ProductId %>"><%= product.ProductName %></a></h3>
                            <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                            <span class="price" style="font-size: 20px"><%= product.Price[0].toString().replace(".", ",") %> €</span>
                            <% } else { %>
                            <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price).toString().replace(".", ",") %> - <%= Math.max.apply(null,product.Price).toString().replace(".", ",") %> €</span>
                            <% } %>
                            <div class="elements-list pull-right">
                                <a href="/DE/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>Öffnen</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="clearfix"></div>
                <% } %>
                <h2 class="page-title">Stark reduziert</h2>
                <div class="separator-2"></div>
                <div id="container" class="row">
                    <% products.forEach(function(product, index) { %>
                    <div class="element col-lg-3 col-md-3 col-sm-6 col-xs-6 masonry-grid-item">
                        <div class="listing-item">
                            <div class="overlay-container">
                                <img src="<%= product.Images %>" onerror="this.src= '/images/no-image.jpg';" />
                                <a href="/DE/product?product_id=<%= product.ProductId %>" class="overlay small">
                                    <i class="fa fa-search-plus"></i>
                                    <span><%= product.Description %></span>
                                </a>
                            </div>
                            <div class="listing-item-body clearfix">
                                <h3 class="title" style="font-weight: 300"><a href="/DE/product?product_id=<%= product.ProductId %>"><%= product.ProductName %></a></h3>
                                <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                                <span class="price" style="font-size: 20px"><%= product.Price[0].toString().replace(".", ",") %> €</span>
                                <% } else { %>
                                <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price).toString().replace(".", ",") %> - <%= Math.max.apply(null,product.Price).toString().replace(".", ",") %> €</span>
                                <% } %>
                                <div class="elements-list pull-right">
                                    <a href="/DE/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>Öffnen</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="clearfix"></div>
                <ul class="pagination"></ul>
            </div>
            <aside class="col-md-2">
                <div class="siderbar">
                    <div class="body clearfixed">
                        <h3>Filter</h3>
                        <div class="separator"></div>
                        <div class="sorting-filters">
                            <form role="form">
                                <div class="form-group">
                                    <label>Kategorie</label>
                                    <select class="form-control" name="category">
                                        <option value="所有" <% if(category=='所有') { %> selected='selected' <% } %>>Alle</option>
                                        <option value="服装鞋子" <% if(category=='服装鞋子') { %> selected='selected' <% } %>>Kleidung&Schuhe</option>
                                        <option value="食品饮食" <% if(category=='食品饮食') { %> selected='selected' <% } %>>Essen</option>
                                        <option value="厨房用具" <% if(category=='厨房用具') { %> selected='selected' <% } %>>Küche</option>
                                        <option value="电子产品" <% if(category=='电子产品') { %> selected='selected' <% } %>>Elektro&Computer</option>
                                        <option value="母婴" <% if(category=='母婴') { %> selected='selected' <% } %>>Mutter&Baby</option>
                                        <option value="化妆品" <% if(category=='化妆品') { %> selected='selected' <% } %>>Kosmetik</option>
                                        <option value="健康保健" <% if(category=='健康保健') { %> selected='selected' <% } %> >Gesundheit</option>
                                        <option value="旅游" <% if(category=='旅游') { %> selected='selected' <% } %> >Reisen&Urlaub</option>
                                        <option value="打折券" <% if(category=='打折券') { %> selected='selected' <% } %> >Gutscheine</option>
                                        <option value="其他" <% if(category=='其他') { %> selected='selected' <% } %> >Andere</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Preis</label>
                                    <div class="row grid-space-10">
                                        <div class="col-sm-6">
                                            <input type="text" name="minprice" class="form-control" placeholder='min'>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" name="maxprice" class="form-control col-xs-6" placeholder='max'>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Soriteren nach</label>
                                    <select class="form-control" name="sort">
                                        <option <% if(sort=='Datum') { %> selected='selected' <% } %>>Datum</option>
                                        <option <% if(sort=='Preis tief nach hoch') { %> selected='selected' <% } %>>Preis tief nach hoch</option>
                                        <option <% if(sort=='Preis hoch nach tief') { %> selected='selected' <% } %>>Preis hoch nach tief</option>
                                        <option <% if(sort=='Bewertung') { %> selected='selected' <% } %>>Bewertung</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default">Ja</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>
<!-- main-container end -->
<!-- section start -->
<!-- ================ -->
<script type="text/javascript">

$(document).ready(function() {
    var $container = $('#container');
    $container.imagesLoaded(function() {
        $container.isotope({
            masonry: {
                columnWidth: ('.masonry-grid-item')
            }
        });
    });

    $('.pagination').pagination({
        pages: <%= pages %> ,
        currentPage: <%= currentPage %>,
        hrefTextPrefix: getURL(),
        prevText: "Vorherige Seite",
        nextText: "Nächste Seite "
    });
});

</script>
