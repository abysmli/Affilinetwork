<hr/>
<script>
	var _image = "";
	$(document).ready(function() {
		$("#article_page").addClass("active");

		$('#article_form').submit(function(event) {
			var data = {
				Content_pre: fullEditor.getText(),
				Content: fullEditor.getHTML(),
				Image: JSON.stringify(_image)
			};
			post(data, "article_form");
		});

		$("#preview_button").click(function() {
			$("#preview_block").html(fullEditor.getHTML());
		});

		// Initialize editor with custom theme and modules
		var fullEditor = new Quill('#full-editor', {
			modules: {
				'toolbar': {
					container: '#full-toolbar'
				},
				'image-tooltip': true,
				'link-tooltip': true
			},
			theme: 'snow'
		});
	});
</script>