		<h3>Preview</h3>
		<% if (article.Image !== "" && article.Image !== undefined) { %>
        <label>Image</label>
        <div class="row">
            <div class="col-xs-4 col-md-2">
                <a href="#" class="thumbnail">
                    <img src=<%- article.Image %> alt="prduct image set">
                </a>
            </div>
