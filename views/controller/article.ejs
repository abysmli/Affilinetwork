<div class="page-header">
    <h1><%= title %></h1>
    <a id="add_button" class="btn btn-warning btn-sm" href="/controller/article/add">Add an Article</a>
    <a id="remove_all" href="/controller/article/remove_all/" class="btn btn-danger btn-sm pull-right">Remove all</a>
</div>
<table id="article_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Content</th>
            <th>Last Update</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tfoot>
    <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Content</th>
        <th>Last Update</th>
        <th>Remove</th>
    </tr>
    </tfoot>
    <tbody>
        <% articles.forEach(function(article, index) { %>
        <tr>
            <td>
                <a href="/controller/article/edit?id=<%= article._id %>"><%= article.Title %></a>
            </td>
            <td>
                <a href="/controller/product/edit?id=<%= article._id %>"><img src=<%- article.Image %> onerror="this.src= '/stylesheets/images/no-image.jpg';" style="max-width: 100px; max-height: 100px"></a>
            </td>
            <td>
                <div class="article_content">
                    <%- article.Content %>
                </div>
            </td>
            <td>
                <%= article.updated_at %>
            </td>
            <td>
                <a class="btn btn-sm btn-danger" href="/controller/article/remove?id=<%= article._id %>" role="button">Remove</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<script>
    $(document).ready(function() {
        var dt = $('#article_table').DataTable({
            lengthMenu: [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            stateSave: true,
        });
        $("#article_page").addClass("active");
        $(".article_content").shorten({
            showChars: 20,
            moreText: 'Show More',
            lessText: 'Show Less'
        });
    });
</script>
