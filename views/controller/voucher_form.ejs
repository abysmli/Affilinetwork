                    </span>
                </div>
                <div id="full-editor" class="editor" style="min-height: 250px; border: 1px solid #D8D8D8;"><%- voucher.IntegrationCodeCN %></div>
            </div>
            <hr/>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-share-alt"></span> <%= title %></button>
        </form>
        <% if (voucher.Image !== "" && voucher.Image !== undefined) { %>
        <hr/>
        <label>Image</label>
        <div class="row">
            <div class="col-xs-4 col-md-2">
                <a href="#" class="thumbnail">
                    <img src=<%- voucher.Image %> alt="prduct image set">
                </a>
            </div>
        </div>
        <% } %>
    </div>
</div>
<script>
    var _image = "";

    $(document).ready(function() {
        $("#voucher_page").addClass("active");

        $('#voucher_form').submit(function(event) {
            var data = {
                IntegrationCodeCN: fullEditor.getHTML(),
                Image: JSON.stringify(_image)
            };
            post(data, "voucher_form");
        });

        // Initialize editor with custom theme and modules
        var fullEditor = new Quill('#full-editor', {
            modules: {
                'toolbar': {
                    container: '#full-toolbar'
                },
                'image-tooltip': true,
                'link-tooltip': true
            },
            theme: 'snow'
        });
    });
</script>
