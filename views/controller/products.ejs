<div class="page-header">
    <h1>Product Manage <small><a id="remove_all" href="/controller/products/remove_all/" class="btn btn-danger btn-sm pull-right">Remove all</a><a class="btn btn-primary" href="/controller/products/update/" style="margin-left: 20px">Synchronize</a></small></h1>
</div>
<div class="row">
    <% products.forEach(function(product, index) { %>
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img data-original = "<%= product.Image.ImageUrl %>" class = "img-responsive">
                <div class="caption">
                    <h4 style="text-align: center"><%= product.Title %></h4>
                    <p><b>Description:</b> <%= product.DescriptionShort %></p>
                    <p><b>Producer:</b> <%= product.ShopInformation.ShopName %></p>
                    <p><b>Preis:</b> <%= product.DisplayPrice %></p>
                    <p><b>Shipping Preis:</b> <%= product.DisplayShipping %></p>
                    <a href="<%= product.DeepLink1 %>">Product Link</a>
                    <p style="text-align: center"><a href="/controller/products/edit?product_id=<%= product.Id %>" class="btn btn-primary" role="button">EDIT</a></p>
                    <span class="label label-primary pull-left">Translated</span>
                </div>
            </div>
        </div>
    <% }) %>
</div>
<script>
    $(document).ready(function() {
        $('.img-responsive').lazyload({});
        $("#remove_all").click(function(event) {
            if (!confirm('Remove All products?ÔºÅ')) {
                event.preventDefault();
            }
        });
    });
</script>
