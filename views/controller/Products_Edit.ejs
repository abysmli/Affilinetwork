<div class="page-header">
    <h1>Product Editor</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="thumbnail">
                    <img data-original="<%= product.image %>" class="img-responsive">
                    <div class="caption">
                        <h3>Title: <%= product.title %></h3>
                        <p><b>Product ID:</b> <%= product.product_id %></p>
                        <p><b>Article Number:</b> <%= product.article_num %></p>
                        <p><b>EAN:</b> <%= product.ean %></p>
                        <p><b>Title:</b> <%= product.title %></p>
                        <p><b>Brand:</b> <%= product.brand %></p>
                        <p><b>Shop Name:</b> <%= product.shop_name %></p>
                        <p><b>Category:</b> <%= product.category_path %></p>
                        <div class="comment"><b>Description Short:</b> <%= product.desc_de_short %></div><br/>
                        <div class="comment"><b>Description:</b> <%= product.desc_de %></div><br/>
                        <div class="comment"><b>Description Chinese:</b> <%= product.desc_cn %></div><br/>
                        <p><b>Translated:</b> <%= product.tranlated %></p>
                        <p><b>Price:</b><%= product.price %></p>
                        <p><b>Shipping Price:</b><%= product.shipping %></p>
                        <p><b>Update at:</b> <%= product.updated_at %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label for="translate">中文翻译</label>
                    <textarea class="form-control" rows="17" name="translate"></textarea>
                </div>
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-share-alt"></span> 翻译</button>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('.img-responsive').lazyload({});
        $(".comment").shorten({
            "showChars": 1000,
            "moreText": "mehr",
            "lessText": "zu",
        });
    });

</script>
