<div class="page-header">
    <h1>Shops Manage</h1>
</div>
<table id="order_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Product Count</th>
            <th>Shop ID</th>
            <th>Shop Title</th>
            <th>Program ID</th>
            <th>Shop Link</th>
            <th>Last Update</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Logo</th>
            <th>Product Count</th>
            <th>Shop ID</th>
            <th>Shop Title</th>
            <th>Program ID</th>
            <th>Shop Link</th>
            <th>Last Update</th>
        </tr>
    </tfoot>

    <tbody>
        <% shops.forEach(function(shop, index) { %>
            <tr>
                <td>
                    <a href="/controller/category?shopid=<%= shop.ShopId %>&shoptitle=<%= shop.ShopTitle %>"><img src="<%= shop.Logo.URL %>"></a>
                </td>
                <td>
                    <%= shop.ProductCount %>
                </td>
                <td>
                    <%= shop.ShopId %>
                </td>
                <td>
                    <%= shop.ShopTitle %>
                </td>
                <td>
                    <%= shop.ProgramId %>
                </td>
                <td>
                    <a href="<%= shop.ShopLink %>">Shop Link</a>
                </td>
                <td>
                    <%= (new Date(parseInt(shop.LastUpdate.substr(6)))).toISOString() %>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>

<script>
    $(document).ready(function() {
        var dt = $('#order_table').DataTable({
            lengthMenu: [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            stateSave: true,
        });
    });

</script>
