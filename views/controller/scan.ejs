<div class="page-header">
    <h1><%= title %> <small> | <%= scans.length %> scans in Database</small></h1>
    <a class="btn btn-primary btn-sm" href="/controller/csv?type=scanview">Download</a>
</div>
<table id="scan_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>From User</th>
            <th>EAN</th>
            <th>Type</th>
            <th>Result</th>
            <th>Insert Date</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>From User</th>
            <th>EAN</th>
            <th>Type</th>
            <th>Result</th>
            <th>Insert Date</th>
        </tr>
    </tfoot>
    <tbody>
        <% scans.forEach(function(scan, index) { %>
            <tr>
                <td>
                    <%= scan.FromUser %>
                </td>
                <td>
                    <%= scan.EAN %>
                </td>
                <td>
                    <%= scan.Type %>
                </td>
                <td>
                    <%= scan.Result %>
                </td>
                <td>
                    <%= (new Date(scan.insert_at)).toLocaleString("en-US", {timeZone: "Asia/Shanghai"}) %>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<script>
    $(document).ready(function() {
        $("#scan_page").addClass("active");
        var dt = $('#scan_table').DataTable({
            lengthMenu: [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            stateSave: true,
            order: [[ 4, "desc" ]]
        });
    });
</script>
