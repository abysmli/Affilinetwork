<div class="page-header">
	<h1><%= title %></h1>
</div>
<div class="row">
	<div class="col-md-6">
		<div class="panel panel-default">
			<!-- Default panel contents -->
			<div class="panel-heading">Contact us - Feedback</div>
			<div class="panel-body">
				<% feedbacks.forEach(function(feedback){ %>
				<div class="media">
					<div class="media-body">
						<h4 class="media-heading"><b>Username: </b><%= feedback.name %></h4>
						<br/>
						<p><b>Email: </b><%= feedback.email %></p>
						<p><b>Title: </b><%= feedback.subtitle %></p>
						<p><b>Content: </b><%= feedback.feedback %></p>
						<p><b>Date: </b><%= (new Date(feedback.updated_at)).toLocaleString("en-US", {timeZone: "Asia/Shanghai"}) %></p>
						<a class="btn btn-sm btn-danger pull-right" href="/controller/feedback/remove?type=feedback&id=<%= feedback._id %>">Remove</a>
					</div>
				</div>
				<hr/>
				<% })%>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="panel panel-default">
			<!-- Default panel contents -->
			<div class="panel-heading">User Request</div>
			<div class="panel-body">
				<% requests.forEach(function(request){ %>
				<div class="media">
					<div class="media-left">
						<a href="<%- request.image %>">
							<img class="media-object" src="<%- request.image %>" alt="..." style="max-width: 200px; max-height: 200px;">
						</a>
					</div>
					<div class="media-body">
						<h4 class="media-heading"><b>Username: </b><%= request.name %></h4>
						<br/>
						<p><b>Email: </b><%= request.email %></p>
						<p><b>Description: </b><%= request.description %></p>
						<a class="btn btn-sm btn-danger pull-right" href="/controller/feedback/remove?type=request&id=<%= request._id %>">Remove</a>
					</div>
				</div>
				<hr/>
				<% }) %>
			</div>
		</div>
	</div>
</div>