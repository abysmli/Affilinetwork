<div class="page-header">
    <h1>Categorys Manage</h1>
</div>
<table id="category_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Parent Category ID</th>
            <th>Title</th>
            <th>Category Path</th>
            <th>Product Count</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Category ID</th>
            <th>Parent Category ID</th>
            <th>Title</th>
            <th>Category Path</th>
            <th>Product Count</th>
        </tr>
    </tfoot>

    <tbody>
        <% categorylist.forEach(function(category, index) { %>
            <tr>
                <td>
                    <%= category.CategoryId %>
                </td>
                <td>
                    <%= category.ParentCategoryId %>
                </td>
                <td>
                    <%= category.Title %>
                </td>
                <td>
                    <%= category.CategoryPath %>
                </td>
                <td>
                    <a href="/controller/product?categoryid=<%= category.CategoryId %>&type=category&currentpage=1&pagesize=100"><%= category.Products %></a>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>

<script>
    $(document).ready(function() {
        var dt = $('#category_table').DataTable({
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            stateSave: true,
        });
    });
</script>
