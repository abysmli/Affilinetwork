<div class="page-header">
    <h1><%= title %></h1>
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" id="link_form">
            <div class="form-group">
                <label for="long">Long Link</label>
                <input type="text" class="form-control" id="long" placeholder="long" name="long" value="<%= link.long || '' %>">
            </div>
            <div class="form-group">
                <label for="short">Short Link</label>
                <input type="text" class="form-control" id="short" placeholder="short" name="short" value="<%= link.short || '' %>">
            </div>
            <hr/>
            <button type="submit" id="post_button" class="btn btn-default"><span class="glyphicon glyphicon-share-alt"></span> Post</button>
        </form>
    </div>
</div>
<hr/>
<script>
    $(document).ready(function() {
        $("#link_page").addClass("active");
    });
</script>