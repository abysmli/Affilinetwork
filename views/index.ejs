<div class="page-intro">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <ol class="breadcrumb">
                    <li><i class="fa fa-th-large pr-10"></i>产品分类: </li>
                    <li class="active"><a href="/category?category=clothes_shoes&page=<%= currentPage %>">服装鞋子</a></li>
                    <li class="active"><a href="/category?category=food&page=<%= currentPage %>">食品饮食</a></li>
                    <li class="active"><a href="/category?category=kitchen&page=<%= currentPage %>">厨房用具</a></li>
                    <li class="active"><a href="/category?category=electronics&page=<%= currentPage %>">电子产品</a></li>
                    <li class="active"><a href="/category?category=handy_pad&page=<%= currentPage %>">手机平板</a></li>
                    <li class="active"><a href="/category?category=makeup&page=<%= currentPage %>">化妆品</a></li>
                    <li class="active"><a href="/category?category=medicine&page=<%= currentPage %>">药品</a></li>
                    <li class="active"><a href="/category?category=travel&page=<%= currentPage %>">旅游</a></li>
                    <li class="active"><a href="/category?category=coupon&page=<%= currentPage %>">打折券</a></li>
                    <li class="active"><a href="/category?category=others&page=<%= currentPage %>">其他</a></li>
                </ol>
            </div>
            <div class="col-md-2">
                <form role="search" class="search-box" action="/search" method="post" style="margin: 0 !important;">
                    <div class="has-feedback">
                        <input type="text" class="form-control" placeholder="搜索产品" name="search" style="-webkit-appearance: textfield; border-radius: 25px">
                        <i class="fa fa-search form-control-feedback"></i>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- main-container start -->
<!-- ================ -->
<section class="main-container">
    <div class="container-fluid">
        <div class="row">
            <div class="main col-md-10">
                <h2 class="page-title">当前最热</h2>
                <div class="separator-2"></div>
                <div class="owl-carousel carousel-autoplay owl-theme col-xs-6">
                    <% hotproducts.forEach(function(product, index) { %>
                    <div class="image-box">
                        <div class="overlay-container">
                            <img src="<%= product.Images %>" />
                            <a href="/product?product_id=<%= product.ProductId %>" class="overlay small">
                                <i class="fa fa-plus"></i>
                                <span><%= product.DescriptionCN %></span>
                            </a>
                        </div>
                        <div class="listing-item-body clearfix">
                            <h3 class="title"><a href="/product?product_id=<%= product.ProductId %>"><%= product.ProductName %></a></h3>
                            <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                            <span class="price" style="font-size: 20px"><%= product.Price[0].toString().replace(".", ",") %> €</span>
                            <% } else { %>
                            <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price).toString().replace(".", ",") %> - <%= Math.max.apply(null,product.Price).toString().replace(".", ",") %> €</span>
                            <% } %>
                            <div class="elements-list pull-right">
                                <a href="/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>点击查看</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="clearfix"></div>
                <h2 class="page-title">折扣商品</h2>
                <div class="separator-2"></div>
                <div id="container" class="row">
                    <% products.forEach(function(product, index) { %>
                    <div class="element col-lg-3 col-md-3 col-sm-6 col-xs-6 masonry-grid-item">
                        <div class="listing-item">
                            <div class="overlay-container">
                                <img src="<%= product.Images %>" onerror="this.src= '/stylesheets/images/no-image.jpg';" />
                                <a href="/product?product_id=<%= product.ProductId %>" class="overlay small">
                                    <i class="fa fa-plus"></i>
                                    <span><%= product.DescriptionCN %></span>
                                </a>
                            </div>
                            <div class="listing-item-body clearfix">
                                <h3 class="title"><a href="/product?product_id=<%= product.ProductId %>"><%= product.ProductName %></a></h3>
                                <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                                <span class="price" style="font-size: 20px"><%= product.Price[0].toString().replace(".", ",") %> €</span>
                                <% } else { %>
                                <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price).toString().replace(".", ",") %> - <%= Math.max.apply(null,product.Price).toString().replace(".", ",") %> €</span>
                                <% } %>
                                <div class="elements-list pull-right">
                                    <a href="/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>点击查看</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="clearfix"></div>
                <ul class="pagination"></ul>
            </div>
            <aside class="col-md-2">
                <div class="siderbar">
                    <div class="body clearfixed">
                        <h3>筛选</h3>
                        <div class="separator"></div>
                        <div class="sorting-filters">
                            <form role="form" action="/filter" method="post">
                                <div class="form-group">
                                    <label>种类</label>
                                    <select class="form-control" name="category">
                                        <option <% if(category=='所有') { %> selected='selected' <% } %>>所有</option>
                                        <option <% if(category=='服装鞋子') { %> selected='selected' <% } %>>服装鞋子</option>
                                        <option <% if(category=='食品饮食') { %> selected='selected' <% } %>>食品饮食</option>
                                        <option <% if(category=='厨房用具') { %> selected='selected' <% } %>>厨房用具</option>
                                        <option <% if(category=='电子产品') { %> selected='selected' <% } %>>电子产品</option>
                                        <option <% if(category=='手机平板') { %> selected='selected' <% } %>>手机平板</option>
                                        <option <% if(category=='化妆品') { %> selected='selected' <% } %>>化妆品</option>
                                        <option <% if(category=='药品') { %> selected='selected' <% } %> >药品</option>
                                        <option <% if(category=='旅游') { %> selected='selected' <% } %> >旅游</option>
                                        <option <% if(category=='打折券') { %> selected='selected' <% } %> >打折券</option>
                                        <option <% if(category=='其他') { %> selected='selected' <% } %> >其他</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>价格区间</label>
                                    <div class="row grid-space-10">
                                        <div class="col-sm-6">
                                            <input type="text" name="minprice" class="form-control" placeholder='最低价格'>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" name="maxprice" class="form-control col-xs-6" placeholder='最高价格'>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>排序</label>
                                    <select class="form-control" name="sort">
                                        <option <% if(sort=='按日期') { %> selected='selected' <% } %>>按日期</option>
                                        <option <% if(sort=='按价格由低到高') { %> selected='selected' <% } %>>按价格由低到高</option>
                                        <option <% if(sort=='按价格由高到低') { %> selected='selected' <% } %>>按价格由高到低</option>
                                        <option <% if(sort=='按热度') { %> selected='selected' <% } %>>按热度</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default">确认</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>
<!-- main-container end -->
<!-- section start -->
