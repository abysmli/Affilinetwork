<section class="main-container">

    <div class="container-fluid">
        <div class="row">

            <!-- main start -->
            <!-- ================ -->
            <div class="main col-md-10">
                <!-- page-title start -->
                <!-- ================ -->
                <h1 class="page-title">浏览商品</h1>
                <div class="separator-2"></div>
                <p class="lead">这里显示的是当下德国乃至欧洲打折的商品.
                    <br class="hidden-sm hidden-xs"> 点选商品图片, 就可以看到更多详细内容!</p>
                <!-- page-title end -->

                <!-- shop items start -->
                <div id="container" class="row">
                    <% products.forEach(function(product, index) { %>
                        <div class="element col-lg-3 col-sm-6 masonry-grid-item">
                            <div class="listing-item">
                                <div class="overlay-container">
                                    <img src="<%= product.Images[0] %>"  style="max-height:280px; max-width:280px; position: absolute; margin: auto; top: 0;left: 0;
                                                                                       right: 0;bottom: 0;" onerror="this.src= '/stylesheets/images/no-image.jpg';" />
                                    <a href="/product?product_id=<%= product.ProductId %>" class="overlay small">
                                        <i class="fa fa-eye"></i>
                                        <span>查看详细介绍</span>
                                    </a>

                                </div>
                                <div class="listing-item-body clearfix">
                                    <h3 class="title"><a href="/product?product_id=<%= product.ProductId %>"><%= product.ProductName %></a></h3>
                                   <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                                        <span class="price" style="font-size: 20px"><%= product.Price %> €</span>
                                        <% } else { %>
                                            <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price) %> - <%= Math.max.apply(null,product.Price) %> €</span>
                                            <% } %>
                                                <div class="elements-list pull-right">
                                                    <a href="#" class="wishlist" title="wishlist"><i class="fa fa-heart-o"></i></a>
                                                    <a href="/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>点击查看</a>
                                                </div>

                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <!-- shop items end -->

                <div class="clearfix"></div>

                <!-- pagination start -->
                <ul class="pagination">
                    <!--<li><a href="/">«</a></li>-->



                    <!--<li class="active"><a href="/?page=1">1 <span class="sr-only"></span></a></li>-->
                    <!--<li><a href="/?page=<%= parseInt(currentPage) +1 %>">next page</a></li>
                            <li><a href="#">»</a></li>-->
                </ul>
                <!-- pagination end -->

            </div>

            <!-- main end -->
            <aside class="col-md-2">
                <form role="form" action="/filter" method="post">
                    <div class="siderbar">
                        <div class="body clearfixed">
                            <h3>筛选</h3>
                            <div class="sorting-filters">
                                <form>
                                    <div class="form-group">
                                        <label>种类</label>
                                        <select class="form-control" name="category">
                                            <option selected="selected">所有</option>
                                            <option>保健品</option>
                                            <option>婴儿食品</option>
                                            <option>服装</option>
                                            <option>男士用品</option>
                                            <option>女性商品</option>
                                            <option>电子产品</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>价格区间</label>
                                        <div class="row grid-space-10">
                                            <div class="col-sm-6">
                                                <input type="text" name="minprice" class="form-control" placeholder='最低价格'>
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="text" name="maxprice" class="form-control col-xs-6" placeholder='最高价格'>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>排序</label>
                                        <select class="form-control" name="sort">
                                            <option selected="selected">按日期</option>
                                            <option>按价格</option>
                                            <option>按评价</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-default">确认</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                </form>
                </div>
            </aside>


        </div>
    </div>
</section>
<!-- main-container end -->

