<div class="page-intro">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <ol class="breadcrumb">
                    <li><i class="fa fa-th-large pr-10"></i>产品分类: </li>
                    <li class="active"><a href="/?category=服装鞋子">服装鞋子</a></li>
                    <li class="active"><a href="/?category=食品饮食">食品饮食</a></li>
                    <li class="active"><a href="/?category=厨房用具">厨房用具</a></li>
                    <li class="active"><a href="/?category=电子产品">电子产品</a></li>
                    <li class="active"><a href="/?category=母婴">母婴</a></li>
                    <li class="active"><a href="/?category=化妆品">化妆品</a></li>
                    <li class="active"><a href="/?category=健康保健">健康保健</a></li>
                    <li class="active"><a href="/?category=旅游">旅游</a></li>
                    <li class="active"><a href="/?category=其他">其他</a></li>
                </ol>
            </div>
            <div class="col-md-2">
                <form role="search" class="search-box" style="margin: 0 !important;">
                    <div class="has-feedback">
                        <input type="text" class="form-control" placeholder="搜索产品" name="search" style="-webkit-appearance: textfield; border-radius: 25px">
                        <i class="fa fa-search form-control-feedback"></i>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- main-container start -->
<!-- ================ -->
<section class="main-container">
    <div class="container-fluid">
        <div class="row">
            <div class="main col-md-10">
                <% if (mainPage) { %>
                <h2 class="page-title">当前最热</h2>
                <div class="separator-2"></div>
                <div class="owl-carousel carousel-autoplay owl-theme col-xs-6">
                    <% hotproducts.forEach(function(product, index) { %>
                    <div class="image-box">
                        <div class="overlay-container">
                            <img src="<%= product.Images %>" />
                            <a href="/product?product_id=<%= product.ProductId %>" class="overlay small">
                                <i class="fa fa-search-plus"></i>
                                <span>
                                    <% for (var l = product.DescriptionCN.length, i = 0; i < l; i++) { %>
                                        <% desc = product.DescriptionCN[i]%>
                                        <% if (desc !== "") { %>
                                            <%= desc %>
                                            <% break %>
                                        <% } %>
                                    <% } %>
                                </span>
                            </a>
                        </div>
                        <div class="listing-item-body clearfix">
                            <h3 class="title" style="font-weight: 300">
                                <a href="/product?product_id=<%= product.ProductId %>">
                                    <% for (var l = product.ProductName.length, i = 0; i < l; i++) { %>
                                        <% name = product.ProductName[i]%>
                                        <% if (name !== "") { %>
                                            <%= name %>
                                            <% break %>
                                        <% } %>
                                    <% } %>
                                </a>
                            </h3>
                            <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                            <span class="price" style="font-size: 20px"><%= product.Price[0].toString().replace(".", ",") %> €</span>
                            <% } else { %>
                            <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price).toString().replace(".", ",") %> - <%= Math.max.apply(null,product.Price).toString().replace(".", ",") %> €</span>
                            <% } %>
                            <div class="elements-list pull-right">
                                <a href="/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>去看看</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="clearfix"></div>
                <% } %>
                <h2 class="page-title">折扣商品</h2>
                <div class="separator-2"></div>
                <div id="container" class="row">
                    <% products.forEach(function(product, index) { %>
                    <div class="element col-lg-3 col-md-3 col-sm-6 col-xs-6 masonry-grid-item">
                        <div class="listing-item">
                            <div class="overlay-container">
                                <img src="<%= product.Images %>" onerror="this.src= '/images/no-image.jpg';" />
                                <a href="/product?product_id=<%= product.ProductId %>" class="overlay small">
                                    <i class="fa fa-search-plus"></i>
                                    <span>
                                    <% for (var l = product.DescriptionCN.length, i = 0; i < l; i++) { %>
                                        <% desc = product.DescriptionCN[i]%>
                                        <% if (desc !== "") { %>
                                            <%= desc %>
                                            <% break %>
                                        <% } %>
                                    <% } %>
                                    </span>
                                </a>
                            </div>
                            <div class="listing-item-body clearfix">
                                <h3 class="title" style="font-weight: 300">
                                    <a href="/product?product_id=<%= product.ProductId %>">
                                    <% for (var l = product.ProductName.length, i = 0; i < l; i++) { %>
                                        <% name = product.ProductName[i]%>
                                        <% if (name !== "") { %>
                                            <%= name %>
                                            <% break %>
                                        <% } %>
                                    <% } %>
                                    </a>
                                </h3>
                                <% if (product.Price.length == 1 || Math.min.apply(null, product.Price) == Math.max.apply(null, product.Price)) { %>
                                <span class="price" style="font-size: 20px"><%= product.Price[0].toString().replace(".", ",") %> €</span>
                                <% } else { %>
                                <span class="price" style="font-size: 20px"><%= Math.min.apply(null,product.Price).toString().replace(".", ",") %> - <%= Math.max.apply(null,product.Price).toString().replace(".", ",") %> €</span>
                                <% } %>
                                <div class="elements-list pull-right">
                                    <a href="/product?product_id=<%= product.ProductId %>"><i class="fa fa-gift pr-10"></i>去看看</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="clearfix"></div>
                <ul class="pagination"></ul>
            </div>
            <aside class="col-md-2">
                <div class="siderbar">
                    <div class="clearfixed">
                        <h3>筛选</h3>
                        <div class="separator"></div>
                        <div class="sorting-filters">
                            <form role="form">
                                <div class="form-group">
                                    <label>种类</label>
                                    <select class="form-control" name="category">
                                        <option <% if(category=='所有') { %> selected='selected' <% } %>>所有</option>
                                        <option <% if(category=='服装鞋子') { %> selected='selected' <% } %>>服装鞋子</option>
                                        <option <% if(category=='食品饮食') { %> selected='selected' <% } %>>食品饮食</option>
                                        <option <% if(category=='厨房用具') { %> selected='selected' <% } %>>厨房用具</option>
                                        <option <% if(category=='电子产品') { %> selected='selected' <% } %>>电子产品</option>
                                        <option <% if(category=='母婴') { %> selected='selected' <% } %>>母婴</option>
                                        <option <% if(category=='化妆品') { %> selected='selected' <% } %>>化妆品</option>
                                        <option <% if(category=='健康保健') { %> selected='selected' <% } %> >健康保健</option>
                                        <option <% if(category=='旅游') { %> selected='selected' <% } %> >旅游</option>
                                        <option <% if(category=='打折券') { %> selected='selected' <% } %> >打折券</option>
                                        <option <% if(category=='其他') { %> selected='selected' <% } %> >其他</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>价格区间</label>
                                    <div class="row grid-space-10">
                                        <div class="col-sm-6">
                                            <input type="text" name="minprice" class="form-control" placeholder='最低价格'>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" name="maxprice" class="form-control col-xs-6" placeholder='最高价格'>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>排序</label>
                                    <select class="form-control" name="sort">
                                        <option <% if(sort=='按日期') { %> selected='selected' <% } %>>按日期</option>
                                        <option <% if(sort=='按价格由低到高') { %> selected='selected' <% } %>>按价格由低到高</option>
                                        <option <% if(sort=='按价格由高到低') { %> selected='selected' <% } %>>按价格由高到低</option>
                                        <option <% if(sort=='按热度') { %> selected='selected' <% } %>>按热度</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default">确认</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>
<!-- main-container end -->
<!-- section start -->
<!-- ================ -->
<script type="text/javascript">

$(document).ready(function() {
    var $container = $('#container');
    $container.imagesLoaded(function() {
        $container.isotope({
            masonry: {
                columnWidth: ('.masonry-grid-item')
            }
        });
    });

    $('.pagination').pagination({
        items: <%= count %> ,
        itemsOnPage: 10,
        cssStyle: 'light-theme',
        currentPage: <%= currentPage %>

        pages: <%= pages %> ,
        currentPage: <%= currentPage %>,
        hrefTextPrefix: getURL(),
        prevText: "上一页",
        nextText: "下一页"

    });
});

</script>
