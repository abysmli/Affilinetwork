<div class="container">
    <h3> <%= info %> </h3>
    <br/>
    <form role="form" action="/" method="post" style="max-width: 300px;">
        <div class="form-group">
            <input type="text" name="username" placeholder="用户名" class="form-control" id="username_input"/>
        </div>
        <div class="form-group">
            <input type="password" name="password" placeholder="密码" class="form-control" id="password_input"/>
        </div>
        <button type="submit" class="btn btn-success">登录</button>
        <a href="/">
            <button type="button" class="btn btn-primary">取消</button>
        </a>
    </form>
    <br/>
    <h4></h4>
</div>

<script>
    $(document).ready(function() {

        $("#form").submit(function(e) {

            if ($("#username_input").val() == "") {
                alert("请正确输入用户名");
                e.preventDefault();
            }
            if ($("#password_input").val() == "") {
                alert("请正确输入密码");
                e.preventDefault();
            }
        });
    });
</script>
