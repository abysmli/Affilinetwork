<div class="container">
    <section class="main-container">
        <div class="container">
            <div class="row">
                <div class="main object-non-visible" data-animation-effect="fadeInDownSmall" data-effect-delay="300">
                    <div class="form-block center-block">
                        <h2 class="title">Login</h2>
                        <hr>
                        <form class="form-horizontal" action="/de" method="post">
                            <div class="form-group has-feedback">
                                <label for="inputUserName" class="col-sm-3 control-label">Benutzername</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control"  name="username" id="username_input" placeholder="Benutzername" required>
                                    <i class="fa fa-user form-control-feedback"></i>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <label for="inputPassword" class="col-sm-3 control-label">Password</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="password_input" name="password" placeholder="Password" required>
                                    <i class="fa fa-lock form-control-feedback"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-8">
                                    <button type="submit" class="btn btn-group btn-default btn-sm">Login</button>
                                    <ul>
                                        <li><a href="/password_reset">Password vergessen?</a></li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </div>
                    <p class="text-center space-top">Noch nicht angemeldet? <a href="/register">Jetzt registrieren</a></p>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
$(document).ready(function() {
    $("#form").submit(function(e) {
        if ($("#username_input").val() == "") {
            alert("Geben Sie bitte einen Benutzername ein!");
            e.preventDefault();
        }
        if ($("#password_input").val() == "") {
            alert("Geben Sie bitte den Password ein!");
            e.preventDefault();
        }
    });
});
</script>
